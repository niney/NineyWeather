<!-- RecipeDetailPage.xaml -->
<Page
    x:Class="NineyWeather.RecipeDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 커맨드 바 -->
        <CommandBar Grid.Row="0" Background="Transparent">
            <CommandBar.Content>
                <Button x:Name="BackButton"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        Click="BackButton_Click"/>
            </CommandBar.Content>
        </CommandBar>

        <ScrollViewer Grid.Row="1">
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 레시피 제목 -->
                <TextBlock Grid.Row="0"
                       Text="{x:Bind Recipe.RecipeName}"
                       Style="{ThemeResource HeaderTextBlockStyle}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>

                <!-- 메인 이미지와 요약 정보 -->
                <Grid Grid.Row="1" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0"
                       Source="{x:Bind Recipe.MainThumbsSrc}"
                       Width="300"
                       Height="200"
                       Stretch="UniformToFill"/>

                    <TextBlock Grid.Column="1"
                          Text="{x:Bind Recipe.Summary}"
                          Style="{ThemeResource BodyTextBlockStyle}"
                          TextWrapping="Wrap"
                          Margin="16,0,0,0"/>
                </Grid>

                <!-- 재료 목록 -->
                <StackPanel Grid.Row="2" Margin="0,0,0,24">
                    <TextBlock Text="재료"
                               Style="{ThemeResource SubheaderTextBlockStyle}"
                               Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{x:Bind Recipe.Ingredients}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4" MaxWidth="400">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}"
                                               Style="{ThemeResource BodyTextBlockStyle}"
                                               Margin="0,0,16,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Quantity}"
                                               Style="{ThemeResource BodyTextBlockStyle}"
                                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- 조리 단계 -->
                <TextBlock Grid.Row="3"
                      Text="조리 순서"
                      Style="{ThemeResource SubheaderTextBlockStyle}"
                      Margin="0,0,0,8"/>

                <ItemsControl Grid.Row="4"
                         ItemsSource="{x:Bind Recipe.Steps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Step, Converter={StaticResource StepNumberConverter}}"
                                     Style="{ThemeResource TitleTextBlockStyle}"
                                     Margin="0,0,0,8"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Description}"
                                         Style="{ThemeResource BodyTextBlockStyle}"
                                         TextWrapping="Wrap"/>
                                    <Image Grid.Column="1"
                                       Source="{Binding Image}"
                                       Width="200"
                                       Height="150"
                                       Stretch="UniformToFill"
                                       Margin="16,0,0,0"
                                       Visibility="{Binding Image, Converter={StaticResource NullToVisibilityConverter}}"/>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- 팁/주의사항 헤더 -->
                <TextBlock Grid.Row="5"
                  Text="팁/주의사항"
                  Style="{ThemeResource SubheaderTextBlockStyle}"
                  Margin="0,0,0,8"/>

                <!-- 팁/주의사항 내용 -->
                <TextBlock Grid.Row="6"
                  Text="{x:Bind Recipe.Tip}"
                  Style="{ThemeResource BodyTextBlockStyle}"
                  TextWrapping="Wrap"
                  Margin="0,0,0,24"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>